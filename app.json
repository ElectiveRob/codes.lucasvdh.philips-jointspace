{
  "id": "codes.lucasvdh.philips-jointspace",
  "version": "0.1.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Philips TV Remote Control",
    "nl": "Philips TV Afstandsbediening"
  },
  "description": {
    "en": "Control your Philips TV's via the Jointspace API, supporting models up to at least 2018",
    "nl": "Bestuur uw Philips TV's via de Jointspace API, met ondersteuning voor modellen tot in ieder geval 2018"
  },
  "category": [
    "appliances"
  ],
  "author": {
    "name": "Lucas van der Have",
    "email": "lucasvdhave@gmail.com"
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "drivers": [
    {
      "id": "philips-jointspace",
      "name": {
        "en": "Philips Television",
        "nl": "Philips Televisie"
      },
      "class": "tv",
      "capabilities": [
        "onoff",
        "volume_up",
        "volume_set",
        "volume_down",
        "channel_up",
        "channel_down",
        "volume_mute"
      ],
      "images": {
        "large": "/drivers/philips-jointspace/assets/images/large.png",
        "small": "/drivers/philips-jointspace/assets/images/small.png"
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "validate",
          "template": "loading"
        },
        {
          "id": "authenticate",
          "template": "pincode",
          "options": {
            "title": {
              "en": "Enter the code displayed on the TV",
              "nl": "Vul de code in die op de TV wordt weergegeven"
            }
          }
        },
        {
          "id": "verify"
        },
        {
          "id": "done"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "nl": "Algemene instellingen"
          },
          "children": [
            {
              "id": "ipAddress",
              "type": "text",
              "label": {
                "en": "IP address",
                "nl": "IP adres"
              },
              "value": "0.0.0.0"
            },
            {
              "id": "apiVersion",
              "type": "text",
              "label": {
                "en": "API version",
                "nl": "API versie"
              },
              "value": "6"
            }
          ]
        }
      ]
    }
  ]
}